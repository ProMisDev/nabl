test overlapping rules [[
  module test
  rules
    [[f]] : int * int
    f(_, 2).
    f(1, _).
    f(_, _).
    f(1, 2).
]] run rename-test(|#1, "g") to [[
  module test
  rules
    g : int * int
    g(_, 2).
    g(1, _).
    g(_, _).
    g(1, 2).
]]

